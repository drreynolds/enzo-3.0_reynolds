#RadHydroInitialGuess = 0             // old time step
RadHydroInitialGuess = 5             // analytical initial guess
#RadHydroNewtIters = 20              // allowed nonlinear iterations
RadHydroNewtNorm = 0                 // norm for measuring Newton convergence
RadHydroINConst = 1.0e-12            // Inexact Newton constant
RadHydroNewtTolerance = 1.0e-5       // nonlinear solver tolerance
RadHydroMinLinesearch = 1.0e-10      // minimum allowed linesearch length
RadHydroMaxMGIters = 50              // allowed Multigrid iters per Newt step
