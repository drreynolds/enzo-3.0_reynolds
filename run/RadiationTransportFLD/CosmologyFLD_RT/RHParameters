RadHydroDtChemFac = 0.1
RadHydroDtSolver = 0                 // enable(1)/disable(0) heuristic dt
RadHydroTheta = 1.0                  // nearly-trapezoidal time integration
RadHydroAnalyticChem = 1             // use analytic solver for chemistry
RadHydroLogChemistry = 0             // use standard variables for species
RadHydroLimiterType = 4              // zeus limiter
RadHydroImplicitLimiter = 0          // lag limiter in implicit solve
